{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2017
    },
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "linebreak-style": ["error", "unix"],
        "no-tabs": "error",
        "semi": ["error", "never"],
        "no-console": "off",
        "no-unused-vars": "off",
        "no-cond-assign": "off",
        "no-case-declarations": "off",
        "no-empty": "off"
    }
}
